<nav
  class="sticky top-0 z-10 flex items-center justify-between bg-background"
  style={`height: 80px; min-height: 80px; padding: 24px var(--padding);`}
>
  <a href="/" class="flex items-center no-underline hover:no-underline">
    <img src="/sandchest-logo-dark.svg" alt="Sandchest" style="height: 48px;" />
  </a>

  <ul class="hidden items-center sm:flex" style="gap: 48px;">
    <li><a href="#features" class="text-text-weak transition-colors hover:text-text-strong">What is Sandchest?</a></li>
    <li><a href="#code" class="text-text-weak transition-colors hover:text-text-strong">See it in action</a></li>
    <li><a href="/login" class="text-text-weak transition-colors hover:text-text-strong">Log in</a></li>
    <li class="star-item">
      <a
        href="https://github.com/sandchest"
        target="_blank"
        rel="noopener"
        class="inline-flex items-center gap-2 bg-text-strong font-medium no-underline transition-all duration-200 hover:bg-white hover:no-underline whitespace-nowrap"
        style="padding: 8px 16px 8px 10px; border-radius: 4px; color: var(--color-background);"
      >
        <svg class="h-[18px] w-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
        </svg>
        Star on GitHub
      </a>
    </li>
  </ul>

  <!-- Mobile menu button -->
  <button
    id="mobile-menu-btn"
    class="flex items-center justify-center sm:hidden"
    style="background: none; border: none; cursor: pointer; padding: 8px; margin: -8px; -webkit-tap-highlight-color: transparent;"
    aria-label="Toggle menu"
    aria-expanded="false"
  >
    <svg id="menu-icon" class="h-6 w-6 text-text-strong" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round">
      <line x1="4" y1="7" x2="20" y2="7" />
      <line x1="4" y1="12" x2="20" y2="12" />
      <line x1="4" y1="17" x2="20" y2="17" />
    </svg>
    <svg id="close-icon" class="hidden h-6 w-6 text-text-strong" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round">
      <line x1="6" y1="6" x2="18" y2="18" />
      <line x1="6" y1="18" x2="18" y2="6" />
    </svg>
  </button>
</nav>

<!-- Mobile dropdown menu -->
<div
  id="mobile-menu"
  class="fixed left-0 right-0 z-[9] hidden bg-background sm:hidden"
  style="top: 80px; border-bottom: 1px solid var(--color-border-weak); padding: 16px var(--padding) 24px;"
>
  <div class="flex flex-col" style="gap: 20px;">
    <a href="#features" class="mobile-link text-text-weak transition-colors hover:text-text-strong" style="font-size: 15px; padding: 4px 0;">What is Sandchest?</a>
    <a href="#code" class="mobile-link text-text-weak transition-colors hover:text-text-strong" style="font-size: 15px; padding: 4px 0;">See it in action</a>
    <a href="/login" class="mobile-link text-text-weak transition-colors hover:text-text-strong" style="font-size: 15px; padding: 4px 0;">Log in</a>
    <a
      href="https://github.com/sandchest"
      target="_blank"
      rel="noopener"
      class="inline-flex items-center justify-center gap-2 bg-text-strong font-medium no-underline transition-all duration-200 hover:bg-white hover:no-underline"
      style="padding: 12px 18px; border-radius: 4px; color: var(--color-background); margin-top: 4px;"
    >
      <svg class="h-[18px] w-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
      </svg>
      Star on GitHub
    </a>
  </div>
</div>

<style>
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  @media (max-width: 55rem) {
    ul { gap: 32px !important; }
    .star-item { display: none; }
  }

  @media (max-width: 48rem) {
    ul { gap: 24px !important; }
  }
</style>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  let isOpen = false;

  function toggleMenu() {
    isOpen = !isOpen;
    mobileMenu?.classList.toggle('hidden', !isOpen);
    menuIcon?.classList.toggle('hidden', isOpen);
    closeIcon?.classList.toggle('hidden', !isOpen);
    menuBtn?.setAttribute('aria-expanded', String(isOpen));
  }

  function closeMenu() {
    if (!isOpen) return;
    isOpen = false;
    mobileMenu?.classList.add('hidden');
    menuIcon?.classList.remove('hidden');
    closeIcon?.classList.add('hidden');
    menuBtn?.setAttribute('aria-expanded', 'false');
  }

  menuBtn?.addEventListener('click', toggleMenu);

  // Close menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', closeMenu);
  });
</script>
