{
  "name": "@sandchest/contract",
  "version": "0.0.1",
  "description": "Shared types, protobuf definitions, and ID utilities for the Sandchest platform",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./validation": {
      "import": {
        "types": "./dist/validation.d.ts",
        "default": "./dist/validation.js"
      }
    },
    "./format": {
      "import": {
        "types": "./dist/format.d.ts",
        "default": "./dist/format.js"
      }
    }
  },
  "files": ["dist"],
  "keywords": ["sandchest", "contract", "types", "protobuf", "sandbox"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sandchest/sandchest",
    "directory": "packages/contract"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "bun test",
    "codegen": "buf generate proto/"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.65.0",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.3.0",
    "ts-proto": "^2.11.2"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.11.0"
  }
}
